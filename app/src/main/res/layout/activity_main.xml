<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="24dp">

    <EditText
    android:id="@+id/edtNome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="36dp"
    android:layout_marginBottom="8dp"
    android:hint="@string/nome"
    android:minHeight="48dp" />

    <EditText
    android:id="@+id/edtEndereco"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="36dp"
    android:layout_marginBottom="8dp"
    android:hint="@string/endereco"
    android:minHeight="48dp" />

    <EditText
    android:id="@+id/edtBairro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="36dp"
    android:layout_marginBottom="8dp"
    android:hint="@string/bairro"
    android:minHeight="48dp" />

    <EditText
    android:id="@+id/edtCep"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="36dp"
    android:layout_marginBottom="8dp"
    android:hint="@string/cep"
    android:minHeight="48dp" />

    <Button
    android:id="@+id/tobao"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="@string/btnCadastra" />

    <EditText
        android:id="@+id/buscaNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="36dp"
        android:layout_marginBottom="8dp"
        android:hint="@string/lista"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btnLista" />

</LinearLayout>